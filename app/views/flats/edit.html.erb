<div class="container col-md-6">
  <h1>Edit flat</h1>
  <%= simple_form_for(@flat) do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :description %>
    <%= f.input :picture_url %>
    <%= f.input :number_of_guests %>
    <%= f.input :price_per_night %>
    <div class="mt-3">
      <%= f.button :submit, class: 'btn btn-primary' %>
      <%= f.button :button, "Cancel", type: "reset", class: "btn btn-danger ml-2" %>
    </div>
  <% end %>
</div>
