<div class="navbar-lewagon">
  <div class="d-flex justify-content-between container-lg">
    <h4>Simple Airbnb</h4>
    <p class="btn btn-outline-primary"><%= link_to 'Add Flat', new_flat_path %></p>
  </div>
</div>

<div class="container col-lg-12">
<h1>All our flats</h1>
  <ul>
    <div>
      <% @flats.each do |flat| %>
      <div class="cards">
        <div class="card-trip mb-3">
          <img src="<%= flat.picture_url %>">
          <div class="card-trip-infos mb-3">
            <div>
              <h2><%= flat.name %></h2>
              <p class="mb-4"><%= flat.address %></p>
              <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <p>$ <%= flat.price_per_night %> per night</p>
                    <p class="ml-1">| <%= flat.number_of_guests %> people</p>
                </div>
                <div class="d-flex">
                  <p><%= link_to 'More info', flat_path(flat) %></p>
                  <p class="ml-2"><%= link_to 'Edit', edit_flat_path(flat), class: "text-warning" %></p>
                  <p class="ml-2"><%= link_to 'Delete', flat_path(flat), method: :delete, data: { confirm: "Are you sure?" }, class: "text-danger" %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </ul>
</div>
